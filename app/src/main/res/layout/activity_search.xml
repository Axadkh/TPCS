<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.police.org.tpcs.SearchActivity"
    android:orientation="vertical">
   <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txtnotfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Data Not found"
        android:textColor="#FF0000"
        android:textSize="23dp"
        android:visibility="gone" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Challan ID"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtchallid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="Challan ID"

                android:textSize="17dp" />

            <TextView
                android:id="@+id/textname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Driver Name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="Name"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textlicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"

                android:text="License No"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txlicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="License"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/textdatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Date and Time"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="Date and Time"

                android:textSize="17dp" />


            <TextView
                android:id="@+id/textitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Challan Title"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtchalantitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="Reason"

                android:textSize="17dp" />

            <TextView
                android:id="@+id/textlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Location"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="Road Name near abc Karachi"
                android:textSize="17dp"

                android:visibility="visible" />

            <TextView
                android:id="@+id/textwardanname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:text="Warden Name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtwardenname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:padding="5dp"
                android:text="warden name"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <TextView
                    android:id="@+id/textcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:text="Total Challan"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/textcount"
                    android:layout_marginLeft="165dp"
                    android:padding="5dp"
                    android:text="2"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textcount"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="59dp"
                    android:padding="5dp"
                    android:text="Payment Status"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:layout_alignLeft="@+id/txtcount"
                    android:layout_alignTop="@+id/textstatus"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Paid"


                    android:textSize="18dp" />

            </RelativeLayout>
        </LinearLayout>
</ScrollView>

</LinearLayout>